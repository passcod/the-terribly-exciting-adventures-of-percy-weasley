{
  "name": "the-terribly-exciting-adventures-of-percy-weasley",
  "version": "0.1.0",
  "description": "A Percy Weasley fanfiction",
  "main": "chapters/01.md",
  "scripts": {
    "prebuild": "mkdir -p build; rm build/* || echo ok",
    "build": "cd chapters; ls *.md | xargs -n1 -P4 -i% sh -c 'echo %; remark % > ../build/%.html'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/passcod/the-terribly-exciting-adventures-of-percy-weasley"
  },
  "keywords": [
    "fanfic",
    "harry-potter",
    "writing"
  ],
  "author": "FÃ©lix Saparelli <felix@passcod.name> (https://passcod.name)",
  "license": "UNLICENSED",
  "dependencies": {
    "remark-abbr": "^1.1.2",
    "remark-cli": "^6.0.1",
    "remark-html": "^9.0.0",
    "remark-textr": "^3.0.1",
    "typographic-base": "^1.0.4"
  },
  "remarkConfig": {
    "plugins": [
      ["parse", {
        "footnotes": true
      }],
      "abbr",
      [
        "textr",
        {
          "plugins": [
            "typographic-base"
          ]
        }
      ],
      "html"
    ]
  }
}
